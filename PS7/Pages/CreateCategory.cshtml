@page
@model PS7.Pages.CreateCategoryModel
@{
    ViewData["Title"] = "CreateCategory";
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<h2>Nowa kategoria</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="newCategory.shortname" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="newCategory.shortname" class="form-control">
                <span asp-validation-for="newCategory.shortname" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newCategory.longname" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="newCategory.longname" class="form-control">
                <span asp-validation-for="newCategory.longname" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Dodaj</button>
            </div>
        </div>
    </form>
</div>

