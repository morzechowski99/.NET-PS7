@page
@model PS7.Pages.ListModel
@{
    ViewData["Title"] = "List";
}

<h2>Lista produktów</h2>
<div class="row col-sm-12">
    <a asp-page="Create" class="btn btn-primary btn-large">Dodaj</a>
</div>
<br />
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model =>
                Model.products[0].id)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model =>
                Model.products[0].name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model =>
                Model.products[0].price)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model =>
                Model.products[0].category)
            </th>
            <th scope="col">Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.products)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(m => p.id)</th>
                <td>@Html.DisplayFor(m => p.name)</td>
                <td>@Html.DisplayFor(m => p.price)</td>
                <td>@Html.DisplayFor(m => p.category)</td>
                <td>
                    <a asp-page="Details" asp-route-id=@p.id>Szczegóły </a>
                    <div class="d-inline-block m-0">
                        <form method="post">
                            <input type="hidden" id="id" asp-for="id" value="@p.id">
                            |<button class="buttonaslink" type="submit">Edytuj </button>|
                        </form>
                    </div>
                    <div class="d-inline-block m-0">
                        <form method="post">
                            <input type="hidden" id="id" asp-for="id" value="@p.id">
                            <button asp-page-handler="Delete" class="buttonaslink" type="submit">Kasuj </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


