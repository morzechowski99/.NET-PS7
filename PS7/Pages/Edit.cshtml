@page
@model PS7.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<h2>Edycja produktu o ID @Model.id</h2>
<br />
<br />
<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label asp-for="product.name" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="product.name" class="form-control">
                <span asp-validation-for="product.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="product.price" class="control-label col-sm2"></label>

            <div class="col-sm-6">
                <input asp-for="product.price" data-val="false" class="form-control">
                <span asp-validation-for="product.price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="categories[0].shortname" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <select asp-for="product.categoryID" class="form-control">
                    @foreach (var c in Model.categories)
                    {
                        <option value="@c.id"> @c.shortname </option>
                    }

                </select>

            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>

